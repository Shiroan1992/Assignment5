<div class="container">
  <div class="row">
    <main class="col-md-12">
      <h2>Student Details</h2>
      {{#if viewData.student}}
      <form method="post" action="/student/update">
        <fieldset>
          <legend>Personal Information</legend>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>First Name:</label>
                <input class="form-control" type="text" value="{{viewData.student.firstName}}" />
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Last Name:</label>
                <input class="form-control" type="text" value="{{viewData.student.lastName}}" />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label>Email:</label>
                <input class="form-control" type="email" value="{{viewData.student.email}}" />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label>Address (Street):</label>
                <input class="form-control" type="text" value="{{viewData.student.address.street}}" />
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Address (City):</label>
                <input class="form-control" type="text" value="{{viewData.student.address.city}}" />
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Address (Province):</label>
                <input class="form-control" type="text" value="{{viewData.student.address.province}}" />
              </div>
            </div>
          </div>
        </fieldset>
        <fieldset>
          <legend>Academic Information</legend>
          <div class="row">
            <div class="col-md-4">
              <label>College Employment:</label><br />
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="TA" {{#if viewData.student.isTA}} checked {{/if}}>
                <label class="form-check-label" for="TA">
                  Teaching Assistant
                </label>
              </div>
              <br />
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Enrollment Status:</label><br />
                <label class="checkbox-inline">
                  <input type="radio" value="Full Time" {{#if (eq viewData.student.enrollmentStatus "Full Time")}} checked {{/if}}> Full Time
                </label>
                <label class="checkbox-inline">
                  <input type="radio" value="Part Time" {{#if (eq viewData.student.enrollmentStatus "Part Time")}} checked {{/if}}> Part Time
                </label>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label for="course">Enrolled in Course:</label>
                {{#if viewData.courses}}
                <select class="form-control" name="course" id="course">
                  <option value="">Select Course</option>
                  {{#each viewData.courses}}
                  <option value="{{courseId}}" {{#if selected}} selected {{/if}}>{{courseCode}}</option>
                  {{/each}}
                </select>
                {{else}}
                <div>No Courses</div>
                {{/if}}
              </div>
            </div>
        </fieldset>
        <hr />
        <input type="submit" class="btn btn-primary float-right" value="Update Student" /><br /><br /><br />
      </form>
      {{else}}
      <p>Student not found.</p>
      {{/if}}
    </main>
  </div>
</div>
