<div class="container">
  <div class="row">
    <main class="col-md-12">

      <form action="/courses/add" method="POST">
        <fieldset>
          <legend>Course Information</legend>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>Course Code:</label>
                <input class="form-control" type="text" name="courseCode" required>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Course Description:</label>
                <input class="form-control" type="text" name="courseDescription" required>
              </div>
            </div>
          </div>
        </fieldset>
        <hr />
        <input type="submit" class="btn btn-primary float-right" value="Add Course" /><br /><br /><br />
      </form>

    </main>
  </div>
</div>

