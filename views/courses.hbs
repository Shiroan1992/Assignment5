<div class="row">
  <div class="col-md-12">
    <br>
    <h2>Courses</h2>
    <a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
    <hr />
    {{#if courses}}
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Course Code</th>
            <th>Course Description</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each courses}}
          <tr>
            <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
            <td><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
            <td><a href="/course/delete/{{courseId}}" class="btn btn-danger">Remove</a></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    {{else}}
    <p>No courses found.</p>
    {{/if}}
  </div>
</div>
